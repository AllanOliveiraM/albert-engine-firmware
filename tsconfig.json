{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "incremental": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"]
}
